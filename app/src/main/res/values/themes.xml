<resources>
    <!-- Base application theme. -->
    <style name="Theme.GoalsHabitTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:itemTextAppearance">@style/MenuTextStyle</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>
        <item name="android:listChoiceBackgroundIndicator">@color/light_teal</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:textColor">@color/navy</item>
    </style>

    <style name="PopupMenuTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@color/navy</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/bottom_nav_colors</item>
        <item name="itemIconTint">@color/bottom_nav_colors</item>
    </style>
</resources>